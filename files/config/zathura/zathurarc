### zathurarc
## colors
# default
set default-bg "#0f0f0f"
set default-fg "#c5c5c6"
# statusbar
set statusbar-bg "#0f0f0f"
set statusbar-fg "#ECA530"
set statusbar-h-padding 8
set statusbar-v-padding 0
# inputbar
set inputbar-bg "#0f0f0f"
set inputbar-fg "#ECA530"
# notifications
set notification-bg "#0f0f0f"
set notification-fg "#c5c5c6"
set notification-error-bg "#0f0f0f"
set notification-error-fg "#5A5C5D"
set notification-warning-bg "#0f0f0f"
set notification-warning-fg "#B98E2A"
# completion
set completion-bg "#1a1a1a"
set completion-fg "#c5c5c6"
set completion-group-bg "#0a0a0a"
set completion-group-fg "#89898a"
set completion-highlight-bg "#ECA530"
set completion-highlight-fg "#0f0f0f"
# highlight
set highlight-color "#B98E2A"
set highlight-active-color "#FFC12D"
# index
set index-bg "#0f0f0f"
set index-fg "#c5c5c6"
set index-active-bg "#ECA530"
set index-active-fg "#0f0f0f"

## recolor
set recolor "true"
set recolor-lightcolor "#c5c5c6"
set recolor-darkcolor "#0f0f0f"
set recolor-keephue "true"

## settings
set font "DejaVu Sans Mono 15"
set guioptions "statusbar"
set window-title-basename "true"
set statusbar-basename "true"
set render-loading "true"
set adjust-open "best-fit"
set zoom-min 10
set zoom-max 1000
set scroll-page-aware "true"
set smooth-scroll "true"
set incremental-search "true"
set first-page-column "1:1"
set scrollstep 50
set selection-clipboard clipboard
set abort-clear-search true

## keybinds
# unmap
unmap n
unmap N
unmap f
unmap q
unmap s
unmap +
unmap -
unmap =
unmap /
unmap i
unmap t
unmap p
# zoom
map + zoom in
map - zoom out
map = adjust_window best-fit
# navigation
map PageDown navigate next
map PageUp   navigate previous
# search
map / focus_inputbar "?"
map <C-s> focus_inputbar "?"
map n search backward
map N search forward
# toggles
map i toggle_inputbar
map S toggle_statusbar
map p toggle_page_mode
map f toggle_fullscreen
# quit
map q quit
